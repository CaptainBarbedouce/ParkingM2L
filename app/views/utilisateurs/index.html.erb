<!doctype html> 
<html lang="fr-FR"> 

	<head>
		<meta charset="utf-8">
		<meta name="description" content="Page d'accueil du Parking M2L"> 

    <script>
      $(document).ready(function() {
      $("#datepicker").datepicker();
      });
    </script>
		<title>Accueil - Admin</title>
	</head>

	<body>
  <div id="user">
    <!-- pour le login --> 
    <!-- AJOUTER DU RUBY LA OU C'EST BIEN -->
      <p>Admin</p> 
      <%= link_to '@current_utilisateur.nom @current_utilisateur.prenom', edit_utilisateur_path(current_utilisateur) %>
      <%= link_to 'Déconnexion', destroy_utilisateur_session_path, class: "mv-item-deconnect", method: :delete %>
    </div>
    <div id="logo"> 
          <!-- pour le logo -->
    </div> 
    <div id="wrapedit">
      <div id="leftTop"> 
      <%= render 'reservation' if @choix == 0 %>
      <%= render 'listeattente' if @choix == 1 %>
      <%= render 'historique' if @choix == 2 %>
      </div>

      <div id="leftMid">
      <!-- AJOUTER DU RUBY LA OU C'EST BIEN -->
        <p>
          <% if @historique.present? %>
            <table>
              <caption><h2 class="title">Historique de la place</h2></caption>
              <thead>
              <tr>
                <th>Date début</th> 
                <th>Date fin</th> 
                <th>Place de parking</th>
              </tr>
              </thead> 
              <tbody>
                <% @historique.each do |h| %>
                  <tr>
                  <td><%= h.date_debut %></td>
                  <td><%= h.date_fin %></td> 
                  <td><%= h.placeparking.libel %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% else %>
            Votre historique est vide ...
          <% end %>
        </p>
      </div>
    </div> 
	</body>
  <footer>
    <%= link_to 'Panneau administrateur', administrateurs_path %>
  </footer>
</html>